+
+## Dummy is dummy configuration -- DO NOT INCLUDE IT IN COVERAGE
+#TMP_LIBS += ../libmisc/libdummy.a
+
+#TMP_LIBS += ../libmisc/libfsmount.a
+#TMP_LIBS += ../libmisc/libmw-fb.a
+TMP_LIBS += ../libmisc/libstringto.a
