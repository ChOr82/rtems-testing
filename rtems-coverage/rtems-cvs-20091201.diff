+endif
+#TMP_LIBS += ../libmisc/libcapture.a
+if ENABLE_EXPERIMENTAL_COVERAGE
+TMP_LIBS += ../libmisc/libdumpbuf.a
+TMP_LIBS += ../libmisc/libdevnull.a
